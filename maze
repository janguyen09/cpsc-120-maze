#include <iostream>
using namespace std;

const int rows=4 ;
const int columns=9 ;
char board[rows][columns+1] = { "** === **", "*       *", "*       *", "*** i ***" };

void print(){
    for (int x=0; x<rows;x++){
        for (int i=0;i<columns;i++){
            cout<<board[x][i];
            
        }cout<<"\n";
        
    }
}

int main()
{
    char direct;
    
    print();
    
    cout << "Description how to move the i by using\n"
    "w: move the i up\n"
    "a: move the i left\n"
    "s: move the i down\n"
    "d: move the i right\n";
    int irow=3;
    int icolumn=4;
    while(true){
    cin >> direct;
   
    if(direct == 'w'){
        char temp;
        temp=board[irow-1][icolumn];
        board[irow-1][icolumn]= board[irow][icolumn];
        board[irow][icolumn]=temp;
        irow--;
        
    }print();
    }
   
    
    return 0;
    
}
